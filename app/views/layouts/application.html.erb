<!DOCTYPE html>
<html>
  <head>
    <title>Beer-of-the-Day</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Beer-of-the-Day</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <% if [params[:controller], params[:action]] == ['products', 'index'] %>active<% end %>"  ><%= link_to 'Alcohol list', admin_categories_path, class: "nav-link" %></li>
        </ul>
      </div>
      <form class="form-inline my-2 my-lg-0">
        <% if current_user %>
          <%= link_to current_user.email, edit_account_path, class: "btn btn-outline-success mr-sm-2" %>
             <%= link_to "Log out", destroy_user_session_path,
                method: :delete,
                class: "btn btn-outline-success my-2 my-sm-2" %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-success mr-sm-2" %>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-success my-2 my-sm-2" %>
        <% end %>
      </form>
    </nav>

    <div class= 'containter'>
      <div class= 'row justify-content-center'>
        <div class= 'col-md-6 offset-md-4'>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
