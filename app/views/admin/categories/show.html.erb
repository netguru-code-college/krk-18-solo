<h1><%= @category.name %></h1>

<h4>Type list</h4>

<table class='table table-dark'>
  <tr>
    <th scope='col'>Name</th>
    <th scope='col'>Description</th>
    <th scope='col'>Occasion</th>
    <th scope='col'>Category</th>
  </tr>
  <% @types.each do |type| %>
    <tr>
      <td><%= type.name %></td>
      <td><%= type.description %></td>
      <td><%= type.occasion %></td>
      <td><%= type.category.name %></td>
    </tr>
  <% end %>
</table>





